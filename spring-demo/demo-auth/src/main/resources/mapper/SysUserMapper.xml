<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="demo.mapper.SysUserMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="demo.entity.SysUser">
        <!--@Table sys_user -->
        <id column="id" property="id"/>
        <result column="nick_name" property="nickName"/>
        <result column="email" property="email"/>
        <result column="phone_number" property="phoneNumber"/>
        <result column="avatar" property="avatar"/>
        <result column="status" property="status"/>
        <result column="login_date" property="loginDate"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, nick_name, email, phone_number, avatar, status, login_date,
            login_date, create_by, create_time, update_by, update_time
    </sql>

    <select id="selectPageWithRole" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_user
                 INNER JOIN sys_user_role ON role_id = #{roleId} AND user_id = id
            ${ew.customSqlSegment}
    </select>
    <select id="selectPageWithoutRole" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_user
                 LEFT JOIN sys_user_role ON user_id = id
        <where>
            ${ew.sqlSegment}
              and role_id is null
        </where>
    </select>
</mapper>
