<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="demo.mapper.SysRoleMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="demo.entity.SysRole">
        <!--@Table sys_role -->
        <id column="id" property="id"/>
        <result column="role_name" property="roleName"/>
        <result column="role_key" property="roleKey"/>
        <result column="role_sort" property="roleSort"/>
        <result column="status" property="status"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, role_name, role_key, role_sort, status, create_by, create_time, update_by,
            update_time
    </sql>

    <select id="selectPageWithMenu" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_role
                 inner join sys_role_menu on menu_id = #{menuId} and role_id = id
            ${ew.customSqlSegment}
    </select>

    <select id="listByRoleKey" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_role
        where role_key = #{roleKey}
    </select>
</mapper>
